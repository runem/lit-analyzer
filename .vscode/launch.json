{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Extension Tests",
        "type": "extensionHost",
        "request": "launch",
        "runtimeExecutable": "${execPath}",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-lit-plugin",
          "--extensionTestsPath=${workspaceFolder}/packages/vscode-lit-plugin/out/test/scripts/mocha-driver.js"
        ],
        "outFiles": ["${workspaceFolder}/packages/vscode-lit-plugin/out/test/**/*.js"]
      }
    ]
  }
