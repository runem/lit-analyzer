{
	"name": "ts-lit-plugin",
	"version": "0.1.4",
	"description": "Typescript plugin that adds type checking and code completion for lit-html",
	"author": "runem",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/runem/ts-lit-plugin.git"
	},
	"keywords": [
		"typescript",
		"tagged",
		"template",
		"lit-html",
		"lit",
		"lit-element"
	],
	"scripts": {
		"prepublish": "npm run build",
		"watch": "tsc --watch",
		"build": "rm -rf lib && tsc",
		"logs": "touch log.txt && tail -f log.txt",
		"lint": "tslint --project ./",
		"open": "TSS_LOG=\"-traceToConsole true -level verbose -file $(pwd)/ts-server-log.txt\" TSS_DEBUG=5999 code dev",
		"prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
		"prettier:write": "prettier --write \"src/**/*.{ts,tsx}\"",
		"readme": "node node_modules/.bin/readme"
	},
	"main": "lib/index.js",
	"files": [
		"/lib/",
		"/html-documentation/"
	],
	"dependencies": {
		"didyoumean2": "^2.0.2",
		"parse5": "^5.1.0",
		"ts-simple-type": "^0.2.23",
		"vscode-css-languageservice": "^3.0.12",
		"vscode-html-languageservice": "^2.1.11-next.10"
	},
	"devDependencies": {
		"@appnest/readme": "^1.0.21",
		"@types/node": "^10.12.24",
		"husky": "^1.3.1",
		"prettier": "^1.16.4",
		"pretty-quick": "^1.10.0",
		"tslint": "^5.12.1",
		"tslint-language-service": "^0.9.9",
		"typescript": "^3.3.3"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": false,
		"printWidth": 200
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"contributors": [
		{
			"name": "Rune Mehlsen",
			"url": "https://twitter.com/runemehlsen",
			"img": "https://avatars2.githubusercontent.com/u/5372940?s=460&v=4"
		},
		{
			"name": "Andreas Mehlsen",
			"url": "https://twitter.com/andreasmehlsen",
			"img": "https://avatars1.githubusercontent.com/u/6267397?s=460&v=4"
		},
		{
			"name": "You?",
			"img": "https://joeschmoe.io/api/v1/random",
			"url": "https://github.com/runem/ts-lit-plugin/blob/master/CONTRIBUTING.md"
		}
	],
	"readme": {
		"logo": {
			"url": "https://raw.githubusercontent.com/runem/ts-lit-plugin/master/documentation/asset/lit-plugin@256w.png",
			"width": 200
		},
		"line": "rainbow",
		"ids": {
			"npm": "ts-lit-plugin",
			"github": "runem/ts-lit-plugin"
		},
		"badges": [
			{
				"alt": "Publish at vscode marketplace",
				"url": "https://marketplace.visualstudio.com/items?itemName=runem.lit-plugin",
				"img": "https://vsmarketplacebadge.apphb.com/version/runem.lit-plugin.svg"
			}
		]
	}
}
