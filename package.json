{
	"name": "ts-lit-plugin",
	"version": "0.0.28",
	"description": "Typescript plugin that adds type checking and code completion for lit-html",
	"author": "runem",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/runem/ts-lit-plugin.git"
	},
	"keywords": [
		"typescript",
		"tagged",
		"template",
		"lit-html",
		"lit",
		"lit-element"
	],
	"scripts": {
		"prepublish": "npm run build",
		"watch": "tsc --watch",
		"build": "rm -rf lib && tsc",
		"logs": "touch log.txt && tail -f log.txt",
		"lint": "tslint --project ./",
		"open": "TSS_LOG=\"-traceToConsole true -level verbose -file $(pwd)/ts-server-log.txt\" TSS_DEBUG=5999 code dev",
		"prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
		"prettier:write": "prettier --write \"src/**/*.{ts,tsx}\""
	},
	"main": "lib/index.js",
	"files": [
		"/lib/",
		"/html-documentation/"
	],
	"dependencies": {
		"didyoumean2": "^2.0.2",
		"parse5": "^5.1.0",
		"ts-simple-type": "^0.2.23",
		"vscode-html-languageservice": "^2.1.11-next.10"
	},
	"devDependencies": {
		"@types/node": "^10.12.24",
		"husky": "^1.3.1",
		"prettier": "^1.16.4",
		"pretty-quick": "^1.10.0",
		"tslint": "^5.12.1",
		"tslint-language-service": "^0.9.9",
		"typescript": "^3.3.3"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": false,
		"printWidth": 200
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
