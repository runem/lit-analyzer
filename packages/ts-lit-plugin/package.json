{
	"name": "ts-lit-plugin",
	"version": "1.2.1",
	"description": "Typescript plugin that adds type checking and code completion to lit-html",
	"author": "runem",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/runem/lit-analyzer.git"
	},
	"keywords": [
		"lit-html",
		"lit",
		"lit-element",
		"javascript",
		"typescript",
		"web components",
		"web",
		"components",
		"tagged",
		"template"
	],
	"scripts": {
		"watch": "tsc --watch",
		"build": "wireit",
		"test": "wireit",
		"readme": "readme generate -i readme.blueprint.md -c readme.config.json",
		"bundle-esbuild": "wireit",
		"compile": "wireit",
		"report-bundle-size": "wireit"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"compile",
				"bundle-esbuild"
			]
		},
		"test": {
			"dependencies": [
				"build"
			]
		},
		"compile": {
			"dependencies": [
				"../lit-analyzer:build"
			],
			"command": "tsc --build --pretty",
			"files": [
				"src/**/*",
				"tsconfig.json"
			],
			"output": [
				"lib",
				"./tsbuildinfo"
			],
			"clean": "if-file-deleted"
		},
		"bundle-esbuild": {
			"dependencies": [
				"../lit-analyzer:build"
			],
			"command": "node esbuild.script.js",
			"files": [
				"src/**/*",
				"esbuild.script.js"
			],
			"output": [
				"lib/bundle-esbuild.js"
			]
		},
		"report-bundle-size": {
			"dependencies": [
				"bundle-esbuild"
			],
			"files": [],
			"output": [],
			"command": "ls -a -l -h -S lib/bundle-esbuild.js"
		}
	},
	"main": "index.js",
	"files": [
		"/lib/",
		"/html-documentation/"
	],
	"dependencies": {
		"lit-analyzer": "^2.0.0-pre.1",
		"web-component-analyzer": "2.0.0-next.4"
	},
	"devDependencies": {
		"@types/node": "^14.0.13",
		"esbuild": "^0.14.34",
		"rimraf": "^3.0.2",
		"typescript": "~4.4.3",
		"wireit": "^0.1.1"
	},
	"contributors": [
		{
			"name": "Rune Mehlsen",
			"url": "https://twitter.com/runemehlsen",
			"img": "https://avatars2.githubusercontent.com/u/5372940?s=460&v=4"
		},
		{
			"name": "Andreas Mehlsen",
			"url": "https://twitter.com/andreasmehlsen",
			"img": "https://avatars1.githubusercontent.com/u/6267397?s=460&v=4"
		},
		{
			"name": "You?",
			"img": "https://joeschmoe.io/api/v1/random",
			"url": "https://github.com/runem/lit-analyzer/blob/master/CONTRIBUTING.md"
		}
	]
}
