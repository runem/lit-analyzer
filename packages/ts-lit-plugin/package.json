{
	"name": "ts-lit-plugin",
	"version": "1.2.1",
	"description": "Typescript plugin that adds type checking and code completion to lit-html",
	"author": "runem",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/runem/lit-analyzer.git"
	},
	"keywords": [
		"lit-html",
		"lit",
		"lit-element",
		"javascript",
		"typescript",
		"web components",
		"web",
		"components",
		"tagged",
		"template"
	],
	"scripts": {
		"clean": "rimraf lib",
		"prepare": "npm run build",
		"watch": "tsc --watch",
		"build": "wireit",
		"test": "wireit",
		"readme": "readme generate -i readme.blueprint.md -c readme.config.json"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"../lit-analyzer:build"
			],
			"command": "tsc --build",
			"files": [
				"src/**/*",
				"tsconfig.json",
				"tsconfig.tsbuildinfo"
			],
			"output": [
				"lib"
			],
			"clean": false
		},
		"test": {
			"dependencies": [
				"build"
			]
		}
	},
	"main": "lib/index.js",
	"files": [
		"/lib/",
		"/html-documentation/"
	],
	"dependencies": {
		"lit-analyzer": "1.2.1",
		"web-component-analyzer": "2.0.0-next.4"
	},
	"devDependencies": {
		"@types/node": "^14.0.13",
		"rimraf": "^3.0.2",
		"typescript": "~4.4.3",
		"wireit": "^0.0.0"
	},
	"contributors": [
		{
			"name": "Rune Mehlsen",
			"url": "https://twitter.com/runemehlsen",
			"img": "https://avatars2.githubusercontent.com/u/5372940?s=460&v=4"
		},
		{
			"name": "Andreas Mehlsen",
			"url": "https://twitter.com/andreasmehlsen",
			"img": "https://avatars1.githubusercontent.com/u/6267397?s=460&v=4"
		},
		{
			"name": "You?",
			"img": "https://joeschmoe.io/api/v1/random",
			"url": "https://github.com/runem/lit-analyzer/blob/master/CONTRIBUTING.md"
		}
	]
}
