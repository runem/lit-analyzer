{
	"include": ["./src"],
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["esnext"],
		"outDir": "./lib",
		"downlevelIteration": true,
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true
	}
}
